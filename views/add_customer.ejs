<%- include layouts/header.ejs %>
    <% if(session.role != 'admin'){ %>
        <% res.redirect("/dashboard"); %>
    <% } %>
        <div class="page-data">
            
            <form method="post" action="/customers/add">
                <table cellpadding="11">
                <tr>
                    <td class="label">Name</td>
                    <td> <input type="text" name="name" required></td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">Address</td>
                    <td valign="top"> <textarea name="address" required cols="30" rows="5"></textarea></td>
                </tr>
                <tr>
                    <td class="label">Email</td>
                    <td> <input type="text" name="email" required></td>
                </tr>
                <tr>
                    <td class="label">Phone</td>
                    <td> <input type="text" name="phone" required></td>
                </tr>
                <tr>
                    <td class="label">User Role</td>
                    <td>
                        <select name="user_role" required>
                            <option value="">Select Role</option>
                            <option value="1">Admin</option>
                            <option value="2">Normal User</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="customerList()">
                    </td>
                </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
